<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/space10">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close_24"
        android:backgroundTint="@color/white"
        android:layout_gravity="right" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/iconSize48"
        android:layout_height="@dimen/iconSize48"
        android:src="@drawable/ic_food_list"
        android:tint="@color/my_btn_color"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/textViewDialogDayDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize16"
        android:layout_marginTop="@dimen/space5"
        android:text="2022-12-17"
        android:textStyle="bold"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/textViewDialogSoup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize16"
        android:text="Çorba"
        android:layout_marginTop="@dimen/space4"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/textViewDialogMainFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize16"
        android:text="Ana yemek"
        android:layout_marginTop="@dimen/space4"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/textViewDialogOtherFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize16"
        android:text="diğer yemek"
        android:layout_marginTop="@dimen/space4"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/textViewDialogSweetAppetizer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize16"
        android:text="Tatlı"
        android:layout_marginTop="@dimen/space4"
        android:layout_marginBottom="@dimen/space8"
        android:layout_gravity="center" />

</androidx.appcompat.widget.LinearLayoutCompat>